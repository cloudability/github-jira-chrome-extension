{
  "manifest_version": 2,
  "name": "Cloudability",
  "version": "0.2.10",
  "description": "Buttons to change JIRA ticket status from the Github Pull Request page.",
  "permissions": [
    "webNavigation",
    "https://github.com/cloudability/*",
    "https://cloudability.atlassian.net/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "main.js"
  ],
  "content_scripts": [{
    "matches": ["https://github.com/cloudability/*"],
    "js": ["jquery-1.11.1.min.js", "main.js"],
    "css": ["main.css"]
  }]
}
